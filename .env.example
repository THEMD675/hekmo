# Hekmo Environment Variables
# Copy to .env.local and fill in values

# ========================
# REQUIRED - Core
# ========================

# Generate: openssl rand -base64 32
AUTH_SECRET=

# Vercel Postgres connection string
POSTGRES_URL=

# ========================
# REQUIRED - AI
# ========================

# Vercel AI Gateway (for Vercel deployments)
# https://vercel.com/ai-gateway
AI_GATEWAY_API_KEY=

# Direct OpenAI key (if not using Vercel AI Gateway)
OPENAI_API_KEY=

# ========================
# REQUIRED - Stripe (Billing)
# ========================

# Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe product prices (create in Dashboard)
STRIPE_PRICE_STARTER=   # 499 SAR/month
STRIPE_PRICE_BUSINESS=  # 1499 SAR/month

# ========================
# REQUIRED - WhatsApp Business API
# ========================

# Meta Business Manager: https://business.facebook.com
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=

# ========================
# OPTIONAL - File Storage
# ========================

# Vercel Blob: https://vercel.com/docs/vercel-blob
BLOB_READ_WRITE_TOKEN=

# ========================
# OPTIONAL - Caching
# ========================

# Vercel KV/Redis: https://vercel.com/docs/redis
REDIS_URL=

# ========================
# OPTIONAL - Email
# ========================

# Resend: https://resend.com/api-keys
RESEND_API_KEY=

# ========================
# OPTIONAL - Analytics
# ========================

# PostHog: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ========================
# PUBLIC
# ========================

# Your production URL
NEXT_PUBLIC_APP_URL=https://hekmo.ai
