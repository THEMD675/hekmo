# Hekmo Environment Variables
# Copy to .env.local and fill in values

# ========================
# REQUIRED - Core
# ========================

# Generate: openssl rand -base64 32
AUTH_SECRET=

# Vercel Postgres connection string
POSTGRES_URL=

# ========================
# REQUIRED - AI
# ========================

# Direct OpenAI key
OPENAI_API_KEY=

# Vercel AI Gateway (optional, for Vercel deployments)
# https://vercel.com/ai-gateway
AI_GATEWAY_API_KEY=

# ========================
# REQUIRED - Stripe (Billing)
# ========================

# Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe product prices (create in Dashboard)
STRIPE_PRICE_STARTER=   # 499 SAR/month
STRIPE_PRICE_BUSINESS=  # 1499 SAR/month
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_PRO_YEARLY=

# ========================
# REQUIRED - WhatsApp Business API
# ========================

# Meta Business Manager: https://business.facebook.com
META_APP_ID=
META_APP_SECRET=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=hekmo_verify_token

# ========================
# OPTIONAL - Search APIs
# ========================

# Tavily (for web search): https://tavily.com
TAVILY_API_KEY=

# Serper (for Google search): https://serper.dev
SERPER_API_KEY=

# ========================
# OPTIONAL - File Storage
# ========================

# Vercel Blob: https://vercel.com/docs/vercel-blob
BLOB_READ_WRITE_TOKEN=

# ========================
# OPTIONAL - Caching
# ========================

# Vercel KV/Redis: https://vercel.com/docs/redis
REDIS_URL=

# ========================
# OPTIONAL - Email
# ========================

# Resend: https://resend.com/api-keys
RESEND_API_KEY=

# ========================
# OPTIONAL - Analytics
# ========================

# PostHog: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ========================
# OPTIONAL - Hekmo Agent (Edge Functions)
# ========================

# If using separate Hekmo Agent backend
HEKMO_API_URL=

# ========================
# PUBLIC
# ========================

# Your production URL
NEXT_PUBLIC_APP_URL=https://hekmo.ai
